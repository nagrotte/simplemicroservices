pipeline {
  agent any
  stages {
    
    stage("build") {
      
      steps {
        
         echo 'building the simple microservice application'
        
         }
      }
    
     stage("test") {
      
      steps {
        
         echo 'test the simple microservice application'
        
         }
      }
    
     stage("deploy") {
      
      steps {
        
         echo 'deploy the simple microservice application'
        
         }
      }
    
    
  }
}
